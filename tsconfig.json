{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "lib": ["ESNext"],
  "include": ["src/**/*.ts"]
}
